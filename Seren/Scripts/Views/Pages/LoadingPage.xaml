<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Seren.Scripts.Views.Pages.LoadingPage"
             Background="{StaticResource PrimaryTab2Color}">

    <AbsoluteLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

        <Image Source="logo.png"
               AbsoluteLayout.LayoutBounds="0.5, 0.4, 260, 120"
               AbsoluteLayout.LayoutFlags="PositionProportional"/>
        
        <Label Text="An assistant for a panic attack"
               Style="{StaticResource TextStyle}"
               TextColor="{StaticResource White80}"
               AbsoluteLayout.LayoutBounds="0.5, 1, -1, -1"
               AbsoluteLayout.LayoutFlags="PositionProportional"
               Margin="0,0,0,30"/>

    </AbsoluteLayout>
</ContentPage>
