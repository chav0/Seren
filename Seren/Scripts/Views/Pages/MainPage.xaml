<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:Seren.Resources.Strings"
             xmlns:views="clr-namespace:Seren.Scripts.Views"
             x:Class="Seren.Scripts.Views.Pages.MainPage"
             Background="{StaticResource BackgroundColor}">
    
    <ScrollView>
        <VerticalStackLayout
            VerticalOptions="Center">

            <!-- Header Box -->
            <ContentView Height="112"
                         HorizontalOptions="FillAndExpand"
                         Padding="16, 20">
                
                <Label
                    Text="{x:Static strings:Localizations.DoYouHavePanic}"
                    Style="{StaticResource HeaderStyle}">
                </Label>
                
            </ContentView>
            
            <!-- Panic Button Box -->
            <ContentView Height="318"
                         Padding="65, 16, 65, 32"
                         HorizontalOptions="FillAndExpand">
                
                <AbsoluteLayout HorizontalOptions="Center" 
                                VerticalOptions="Center"
                                Margin="0, 0, 0, 73">
                    <Frame AbsoluteLayout.LayoutBounds="0.5, 0.5, 282, 282" AbsoluteLayout.LayoutFlags="PositionProportional"
                           BackgroundColor="{StaticResource SecondaryTab1Color}" 
                           CornerRadius="141" 
                           HasShadow="False"/>
                    <Frame AbsoluteLayout.LayoutBounds="0.5, 0.5, 270, 270" AbsoluteLayout.LayoutFlags="PositionProportional"
                           BackgroundColor="{StaticResource PrimaryTab1Color}" 
                           CornerRadius="135"
                           HasShadow="False"/>
                    <Button AbsoluteLayout.LayoutBounds="0.5, 0.5, 240, 240" AbsoluteLayout.LayoutFlags="PositionProportional"
                            Text="{x:Static strings:Localizations.Panic}"
                            FontFamily="VollkornBold"
                            FontSize="50"
                            BackgroundColor="Transparent"
                            TextColor="White"
                            Clicked="OnPanicClick" />
                </AbsoluteLayout>
                
            </ContentView>


            
            <Grid RowSpacing="10" ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150" />
                    <RowDefinition Height="150" />
                </Grid.RowDefinitions>

                <views:MainMenuButtonView
                    Header="{x:Static strings:Localizations.Meditation}"
                    Description="{x:Static strings:Localizations.MeditationDescription}"
                    Color="{StaticResource Yellow400}"
                    TextColor="{StaticResource Gray100}"
                    IconPath="meditation_icon.png"
                    Clicked="OnMeditationClick" 
                    Grid.Column="0" Grid.Row="0"/>
                
                <views:MainMenuButtonView
                    Header="{x:Static strings:Localizations.HelpYourself}"
                    Description="{x:Static strings:Localizations.HelpYourselfDescription}"
                    Color="{StaticResource Green600}"
                    TextColor="{StaticResource Gray100}"
                    IconPath="help_icon.png"
                    Clicked="OnHelpClick" 
                    Grid.Column="1" Grid.Row="0"/>

                <views:MainMenuButtonView
                    Header="{x:Static strings:Localizations.Breath}"
                    Description="{x:Static strings:Localizations.BreathDescription}"
                    Color="{StaticResource Blue500}"
                    TextColor="{StaticResource Gray100}"
                    IconPath="breath_icon.png"
                    Clicked="OnBreathingClick" 
                    Grid.Column="0" Grid.Row="1"/>

                <views:MainMenuButtonView
                    Header="{x:Static strings:Localizations.Breath}"
                    Description="{x:Static strings:Localizations.BreathDescription}"
                    Color="{StaticResource Blue500}"
                    TextColor="{StaticResource Gray100}"
                    IconPath="breath_icon.png"
                    Clicked="OnBreathingClick"
                    Grid.Column="1" Grid.Row="1"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>