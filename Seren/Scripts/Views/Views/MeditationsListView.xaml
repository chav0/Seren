<?xml version="1.0" encoding="utf-8"?>

<views:BaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Seren.Scripts.Views.Views"
             xmlns:vm="clr-namespace:Seren.Scripts.ViewModels"
             x:Class="Seren.Scripts.Views.Views.MeditationsListView"
             x:TypeArguments="vm:MeditationsViewModel"
             x:DataType="vm:MeditationsViewModel">
    
    <ScrollView Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                HeightRequest="160"
                HorizontalScrollBarVisibility="Never">
        <HorizontalStackLayout x:Name="MeditationsContainer"
                               Padding="16, 0"
                               Spacing="12"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand">
        </HorizontalStackLayout>
    </ScrollView>
    
</views:BaseView>