<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Seren.Scripts.Views.Views"
             x:DataType="views:RateButton"
             x:Class="Seren.Scripts.Views.Views.RateButton">
    
    <Button x:Name="InnerButton"
            HorizontalOptions="FillAndExpand"
            HeightRequest="95"
            CornerRadius="30"
            BackgroundColor="{Binding ButtonColor}"
            Opacity="0"
            Text="{Binding MoodText}"
            TextColor="{StaticResource Blue3}"
            FontFamily="VollkornBold"
            FontSize="30"
            Clicked="OnInternalButtonClicked">
    </Button>
</ContentView>