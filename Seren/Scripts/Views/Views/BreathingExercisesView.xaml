<?xml version="1.0" encoding="utf-8"?>
<views:BaseView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                xmlns:views="clr-namespace:Seren.Scripts.Views.Views"
                xmlns:vm="clr-namespace:Seren.Scripts.ViewModels"
                x:Class="Seren.Scripts.Views.Views.BreathingExercisesView"
                x:TypeArguments="vm:BreathingExercisesViewModel"
                x:DataType="vm:BreathingExercisesViewModel">

    <ScrollView Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                HeightRequest="168">
        <HorizontalStackLayout x:Name="BreathingExercisesContainer"
                               Spacing="12"
                               HorizontalOptions="FillAndExpand"
                               VerticalOptions="FillAndExpand">
        </HorizontalStackLayout>
    </ScrollView>

</views:BaseView>
