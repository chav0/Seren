<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Seren.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Seren.Scripts.Views.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="{StaticResource TabBarBackgroundColor}"
    Shell.TabBarForegroundColor="{StaticResource PrimaryTab2Color}"
    Shell.TabBarTitleColor="{StaticResource PrimaryTab2Color}"
    Shell.TabBarUnselectedColor="{StaticResource UnselectedTabColor}"
    Shell.TitleColor="{StaticResource HeaderColor}">

    <TabBar>
        <ShellContent Route="main" Title="Main" Icon="panic_icon.png" ContentTemplate="{DataTemplate pages:MainPage}" />
        <ShellContent Route="practices" Title="Practices" Icon="breath_icon.png" ContentTemplate="{DataTemplate pages:PracticesPage}" />
        <ShellContent Route="settings" Title="Settings" Icon="help_icon.png" ContentTemplate="{DataTemplate pages:SettingsPage}" />
    </TabBar>

</Shell>
